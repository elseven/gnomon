<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:background="#7e7e7e" android:gravity="center">

    <LinearLayout
            android:id="@+id/parentContainer"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" android:background="#ffffffff"
            android:layout_marginBottom="0.25dp" android:layout_marginTop="0.25dp" android:layout_marginLeft="0.25dp"
            android:layout_marginRight="0.25dp" android:gravity="center_vertical">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_margin="0dp"
                android:padding="0dp"
                android:gravity="center_horizontal">

            <TextView
                android:id="@+id/leadername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day1"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/leaderStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="3dp"
                android:text="Day2"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>